<!DOCTYPE html>
<html>
<head>
  <title>NightFury Overflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <% if session[:user_id] %>
      <%= link_to "My Account", profile_path, class: "button" %>
      <%= link_to "Logout", logout_path, class: "button" %>
    <% else %>
      <%= link_to "Login", login_path, class: "button" %>
      <%= link_to "Sign Up", signup_path, class: "button" %>
    <% end %>
  </nav>
  <div class="container">
    <header>
      <%= image_tag('nightfury.jpg') %><h1 class="logo-text"><span class="logo-light">NightFury</span><span class="logo-heavy">Overflow</span></h1>
    </header>
    <%= yield %>
  </div>

</body>
</html>
