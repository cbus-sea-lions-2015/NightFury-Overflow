<h1>  <%= @question.title %> </h1>
<p class="meta"><%= @question.user.name %> on <%= @question.created_at.strftime("%B %d, %Y") %></p>
<p> <%= simple_format(@question.body) %> </p>

<!-- partial for showing question comments -->
<% @question.comments.each do |comment| %>
  <%= render 'comments/show', comment: comment %>
<% end %>

<!-- partial for adding question comment -->
<% if logged_in? %>
<%= render 'comments/form', comment: Comment.new, question: @question %>
<% end %>

<% @question.answers.each do |answer| %>
  <%= render 'answer/show', answer: answer %>
  <!-- partial for showing Answer comments -->
  <% answer.comments.each do |comment| %>
    <%= render 'comments/show', comment: comment %>
  <% end %>
<% end %>
