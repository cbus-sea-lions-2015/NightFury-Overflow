<h1>Sign Up!</h1>

<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email, autofocus: true, placeholder: "Email" %> <br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password, placeholder: "Password" %> <br>
  <%= f.label :password_confirmation, "Confirm Password" %>
   <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %> <br>
  <%= f.label :first_name, "First Name" %>
  <%= f.text_field :first_name, placeholder: "First Name" %> <br>
  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name, placeholder: "Last Name" %> <br>
  <%= f.submit "Sign Up", :disable_with => 'Submiting...' %>
<% end %>
