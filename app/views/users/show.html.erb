<h1>Hello <%= current_user.name %>!</h1>
<h2>Account Information</h2>
<hr>
<table>
  <tr>
    <td>Name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>Email</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>Location</td>
    <td><%= @user.location %></td>
  </tr>
  <tr>
    <td>Age</td>
    <td><%= @user.age %></td>
  </tr>
</table>

<button><%= link_to "Edit Account Information", edit_user_path(@user) %></button>

<button><%= link_to "Delete Account", user_path(@user), method: :delete, data: {confirm: "Are you sure?"} %></button>