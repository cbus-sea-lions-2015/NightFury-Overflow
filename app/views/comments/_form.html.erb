<% @comment = Comment.new %>
<% targets = answer ? [@question, answer, @comment] : [@question, @comment] %>
<% reply_to = answer ? "answer" : "question" %>
<%= targets %>
<%= form_for targets do |f| %>
  <fieldset>
    <%= f.label :body, "Comment on this #{reply_to}" %>
    <%= f.text_area :body, autofocus: true %>
  </fieldset>
  <%= f.submit "Reply", :disable_with => 'Submiting...' %>
<% end %>